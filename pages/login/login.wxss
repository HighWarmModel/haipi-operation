page{
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg,#0093e9,#90d0c7)
}
.main {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.container {
  width: 600rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #ffffff;
}
.title{
  text-align: center;
  background-color: #f0f0f0;
  padding: 20rpx 0;
  color: #999999;
}
.login-phone, .login-psw, .login-code{
  position: relative;
  margin: 30rpx 20rpx;
}
.login-icon {
  position: absolute;
  display: flex;
  align-items: center;
  left: 10rpx;
  top: 0;
  height: 100%;
}
.phone-input, .psw-input, .code-input {
  padding: 10rpx 20rpx 10rpx 70rpx;
  font-size: 14px;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  transition: box-shadow 0.2s ease-in-out;
}
.code-input{
  width: 280rpx;
}
/* .phone-input:focus, */
 .login-active{
  box-shadow: 0 0 3px 1px #0093e9;
}
.login-code{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.send-code{
  padding: 10rpx 0;
  width: 160rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 1.4rem;
  font-size: 14px;
  color: #ffffff;
  border-radius: 10rpx;
  background-color:#0093e9;
}
.send-code.send-code-active {
  color: #666666;
  background-color: #dddddd;
}
.btn-container{
  padding: 0 20rpx;
  margin: 50rpx 0;
}
button.login-btn{
 height: 80rpx;
 line-height: 76rpx;
 background-color:#0093e9;
 color: #ffffff;
 border-radius: 10rpx;
}